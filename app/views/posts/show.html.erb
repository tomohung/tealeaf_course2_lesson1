<div class="well">
  <%= render 'posts/category_badge', post: @post %>
  <h4><%= @post.title%> <small> <%= link_to @post.url, fix_url(@post.url) %> </small></h4>
  
  <div>
    <%= @post.description%>
  </div>

  <%= render 'post_info', post: @post %>
  
  <%= link_to "Edit", edit_post_path(@post)%> |
  <%= link_to "Back", root_path%>
</div>

<%= render 'comments/form' %>
<%= render @post.comments %>
