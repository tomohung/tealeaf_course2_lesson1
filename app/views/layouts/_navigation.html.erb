<ul class="nav">
  <li>
    <%= link_to "Postit!", root_path, :class => 'brand' %>
  </li>

  <li>
    <div class="btn-group">
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
      Categories <span class="caret"></span></button>
      <ul class="dropdown-menu" role="menu">
        <% Category.all.each do |category| %>
          <li><a href= <%= category_path(category) %>> <%= category.name%></a></li>
        <% end %>

        <% if logged_in? %>
          <li role="presentation" class="divider"></li>
          <li><%= link_to 'Category Manager', categories_path %></li>
        <% end %>
      </ul>
    </div>  
  </li>
  
  <% if logged_in? %>
    <div class='btn-group'>
      <button type='button' class='btn btn-default dropdown-toggle' data-toggle='dropdown'>
      Hi! <%= current_user.username %> <span class='caret'></span></button>
      <ul class='dropdown-menu' role='menu'>
        <li><%= link_to "Edit Profile", user_path(current_user) %></li>
        <li><%= link_to "Log out", logout_path, method: :delete %></li>
      </ul>
    </div>

    <li>
      <%= link_to 'New Post', new_post_path %>
    </li>
  <% else %>
    <li>
      <%= link_to 'Log In', login_path %>
    </li>
    <li>
      <%= link_to 'Register', register_path %>
    </li>
  <% end %>    
  
</ul>

