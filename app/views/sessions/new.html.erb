<h4>Log In </h4>

<%= form_tag login_path do %>
  <div class='group-control'>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </div>
  <div class='group-control'>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <%= submit_tag "Log In", class: 'btn btn-primary' %>
<% end %>