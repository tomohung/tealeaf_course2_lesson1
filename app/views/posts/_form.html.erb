
<%= render 'shared/error_messages', instance: @post %>

<div class='well'>
  <%= form_for @post do |f| %>
    <div class='group-control'>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    
    <div class='group-control'>
      <%= f.label :url %>
      <%= f.text_field :url %>
    </div>
    
    <div class='group-control'>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>