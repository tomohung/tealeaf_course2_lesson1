<ul class="nav">
  <li>
    <%= link_to "Postit!", root_path, :class => 'brand' %>
  </li>

  
  <div class="btn-group nav_item">
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
    Categories <span class="caret"></span></button>
    <ul class="dropdown-menu" role="menu">
      <% Category.all.each do |category| %>
        <li><a href= <%= category_path(category) %>> <%= category.name%></a></li>
      <% end %>

      <% if logged_in? && admin? %>
        <li role="presentation" class="divider"></li>
        <li>
          <%= link_to  categories_path  do %>
            <i class='icon-list-alt'></i>
            Categories Manager
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>  
  
  
  <% if logged_in? %>
    <div class='btn-group nav_item'>
      <button type='button' class='btn btn-default dropdown-toggle' data-toggle='dropdown'>
      Hi! <%= current_user.username %> <span class='caret'></span></button>
      <ul class='dropdown-menu' role='menu'>
        <li>
          <%= link_to user_path(current_user) do %>
            <i class='icon-user'></i>
            User Profile
          <% end %>
        </li>
        <li>
          <%= link_to edit_user_path(current_user) do %>
            <i class='icon-pencil'></i>
            Edit Profile
          <% end %>
        </li>
        <li role="presentation" class="divider"></li>
        <li>
          <%= link_to logout_path, method: :delete do %>
            <i class='icon-off'></i>
            Log Out
          <% end %>
        </li>
      </ul>
    </div>

    <div class='nav_item'>
      <%= link_to 'New Post', new_post_path, class: 'btn btn-success' %>
    </div>
  <% else %>
  
    <div class='nav_item'>
      <%= link_to 'Log In', login_path, class: 'btn btn-success' %>
    </div>
  
    <div class='nav_item'>
      <%= link_to 'Register', register_path, class: 'btn btn-primary' %>
    </div>
  <% end %>    
  
</ul>

